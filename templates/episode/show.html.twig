{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1 class="title">Episode</h1>
    <div class="btn-link-wrapper">
        <a class="btn-link" href="{{ path('episode_edit', {'id': episode.id}) }}"><button class="btn btn-primary">Edit</button></a>
        {{ include('episode/_delete_form.html.twig') }}
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('episode_index') }}"><button type="button" class="btn btn-warning">Back to list</button></a>
{% endblock %}
