{% extends 'base.html.twig' %}

{% set bodyclass = bodyclass|default("")~" actor " %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1 class="title">Actor</h1>
    <table class="table">
        {%dump%}
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ actor.name }}</td>
            </tr>
            <tr>
                <th>Program(s)</th>
                <td>{% for program in actor.programs %}<a href="/program/{{ program.id }}">{{ program.title }}</a>{% if not loop.last %}, {% endif %}{% endfor %}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
