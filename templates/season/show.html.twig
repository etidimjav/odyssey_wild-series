{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <h1 class="title">Season</h1>
    <div class="btn-link-wrapper">
        <a class="btn-link" href="{{ path('season_edit', {'id': season.id}) }}"><button class="btn btn-primary">Edit</button></a>
        {{ include('season/_delete_form.html.twig') }}
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('season_index') }}"><button type="button" class="btn btn-warning">Back to list</button></a>
{% endblock %}
