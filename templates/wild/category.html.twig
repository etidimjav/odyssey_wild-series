{% extends "base.html.twig" %}

{% block body %}
    <div class="container-fluid">
        <div class="container">
            <h1>Les 3 dernières séries de la catégorie {{ categoryName }} : </h1>
            {% for program in programs %}
                <div>
                    <h2>{{ program.id }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
                    <p>{{ program.summary }}</p>
                </div>
            {% else %}
                Aucune série trouvée.
            {% endfor %}
            <a class="backlink" href="{{ path('app_index') }}">
                Retour à l'accueil
            </a>
        </div>
    </div>
{% endblock %}