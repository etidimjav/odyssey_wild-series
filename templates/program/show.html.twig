{% extends 'base.html.twig' %}

{% set bodyclass = bodyclass|default("")~" program " %}

{% block title %}Program{% endblock %}

{% block body %}
    <h1 class="title">Program</h1>
    <div class="btn-link-wrapper">
        <a class="btn-link" href="{{ path('program_edit', {'id': program.id}) }}"><button class="btn btn-primary">Edit</button></a>
        {{ include('program/_delete_form.html.twig') }}
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ program.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ program.title }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ program.summary }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td><img class="img-fluid" src="{{ program.poster }}"/></td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ program.country }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ program.year }}</td>
            </tr>
        </tbody>
    </table>

    <strong>Acteur(s) :</strong>
    <ul>
        {% for actor in program.actors %}
            <li><a href="/actor/{{ actor.id }}">{{ actor.name }}</a></li>
        {% else %}
            <li>Aucun acteur pour cette s√©rie</li>
        {% endfor %}
    </ul>

    <a href="{{ path('program_index') }}"><button type="button" class="btn btn-warning">Back to list</button></a>
{% endblock %}
